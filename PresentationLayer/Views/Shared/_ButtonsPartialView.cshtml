@model string
<td>
    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@Model" style="width: 100px;">
        Details <i class="bi bi-eye"></i>
    </a>
</td>
<td>
    <a class="btn btn-warning btn-sm" asp-action="Update" asp-route-id="@Model" style="width: 100px;">
        Update <i class="bi bi-pencil-square"></i>
    </a>
</td>
<td>
    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@Model" style="width: 100px;">
        Delete <i class="bi bi-trash"></i>
    </a>
</td>