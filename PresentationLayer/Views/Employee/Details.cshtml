@model EmployeeViewModel
@{
    ViewData["Title"] = "Details";
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");

}

<div class="row mb-3">
    <div class="col-12">
        <form asp-action="Details" asp-controller="Employee">
            <div class="form-group has-danger">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly/>
            </div>
            <div class="form-group has-danger">
                <label asp-for="@Model.ImageUrl" class="col-form-label">@Model.Name's Image</label>
                <br />
                <img src="~/Files/Images/@Model.ImageUrl" class="img-circle" width="200" alt="@Model.Name's Image" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address" class="col-form-label"></label>
                <input asp-for="@Model.Address" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Salary" class="col-form-label"></label>
                <input asp-for="@Model.Salary" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control" readonly/>
            </div>

            <div class="form-group">
                <label asp-for="@Model.DepartmentId" class="form-label mt-4"> Department </label>
                <select asp-for="@Model.DepartmentId" class="form-select" asp-items="Departments" disabled>
                    <option>--- Select Department ---</option>
                </select>
            </div>


            <div class="form-group">
                <label asp-for="@Model.HireDate" class="col-form-label"></label>
                <input type="date" asp-for="@Model.HireDate" class="form-control" readonly/>
            </div>
            <br />
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.IsActive"readonly />
                <label class="form-check-label" asp-for="@Model.IsActive"></label>
            </div>
            <br />
            <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id">Edit</a> |
            <a class="btn btn-light" asp-action="Index" asp-route-id="@Model.Id">Back To List</a>

        </form>
    </div>
</div>
