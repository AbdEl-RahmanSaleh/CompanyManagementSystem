@if(TempData["Message"]!= null)
{
    <div class="alert alert-success">
        <h3>@TempData["Message"]</h3>
    </div>
}

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover" >
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x =>x.Code)</th>
                <th>@Html.DisplayNameFor(x =>x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" style="width: 100px;">
                            Details <i class="bi bi-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" style="width: 100px;">
                            Update  <i class="bi bi-pencil-square"></i>
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" style="width: 100px;">
                            Delete  <i class="bi bi-trash"></i> 
                        </a>
                    </td>

                </tr>
            }

        </tbody>

    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Department Found</h3>
    </div>
}