@model RegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <form asp-action="SignUp">
            @* <div asp-validation-summary="All" class="text-danger"></div> *@
            <input asp-for="@Model.Email" class="text email" placeholder="Email" required="" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            <input asp-for="@Model.Password" class="text" type="password" placeholder="Password" required="" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
            <input asp-for="@Model.ConfirmPassword" class="text w3lpass" type="password" placeholder="Confirm Password" required="" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            
            <div class="wthree-text">
                <label class="anim">
                    <input type="checkbox" asp-for="@Model.IsAgree" class="checkbox" required="" />
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"></div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Have an Account? <a asp-action="LogIn">Login Now!</a></p>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
